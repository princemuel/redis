# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 112
trim_trailing_whitespace = true

# Python - 4 spaces, Black formatter line length
[{*.db,*.sql,*.sqlite}]
indent_size = 4
max_line_length = 48

# Python - 4 spaces, Black formatter line length
[{*.py,*.pyi}]
indent_size = 4
max_line_length = 96

[{*.toml,*.yaml}]
indent_size = 2
max_line_length = 96

# Rust - 4 spaces, rustfmt default line length
[*.rs]
indent_size = 4

[{*.c,*.h,*.cpp,*.hpp,*.cc,*.cxx,*.hh,*.hxx}]
indent_size = 4

# Java and JVM languages - 4 spaces
[{*.java,*.kt,*.kts,*.scala,*.groovy,*.gradle}]
indent_size = 4

# Scripts
[*.sh]
indent_size = 4

# Go - tabs (idiomatic Go style)
[*.go]
indent_style = tab
indent_size = unset # Allow user-defined tab width

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
indent_size = unset # Allow user-defined tab width

[justfile]
indent_size = 4

# Specific settings for Markdown files
[{*.md,*.mdx,*.mdoc}]
indent_size = 2
max_line_length = 108
trim_trailing_whitespace = false
